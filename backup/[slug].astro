import Layout from "../src/layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await Astro.glob("../data/*.md");

  return posts.map((post) => {
    return {
      params: { slug: post.frontmatter.slug },
      props: { ...post },
    };
  });
}

